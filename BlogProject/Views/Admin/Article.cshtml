@model IEnumerable<BlogProject.Models.Article>
@{
    ViewBag.Title = "Makaleler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="header-title">@ViewBag.Title</div>
                </div>
                <div class="col-sm-6">
                    <a href="~/Admin/ArticleAdd" class="btn btn-rounded btn-success mb-3 float-right ">Yeni Makale Ekle</a>
                </div>
            </div>
                <div class="single-table">
                    <div class="table-responsive">
                        <table class="table table-hover progress-table text-center">
                            <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Adı</th>
                                    <th scope="col">Kayıt Tarihi</th>
                                    <th scope="col">Aktif/Pasif</th>
                                    <th scope="col">Sil/Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (BlogProject.Models.Article article in Model)
                                {
                                    <tr>
                                        <th scope="row">@article.ArticleId</th>
                                        <td>@article.Title</td>
                                        <td>@String.Format("{0:dd MM yyyy}", article.CreatedDate)</td>
                                        <td>
                                            @if (article.IsActive==true)
                                            {
                                                <span class="status-p bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="status-p bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <ul class="d-flex justify-content-center">
                                                <li class="mr-3"><a href="~/Admin/ArticleEdit/@article.ArticleId" class="text-secondary"><i class="fa fa-edit"></i></a></li>
                                                <li><a href="~/Admin/ArticleDelete/@article.ArticleId" class="text-danger"><i class="ti-trash"></i></a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>