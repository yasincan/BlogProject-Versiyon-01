
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Giriş</title>
</head>
<body>
   @using (Html.BeginForm("Login","User",new {ReturnUrl=ViewBag.ReturnUrl })) {
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Admin Giriş</h1>
        </div>

        <div class="form-group">
            <input type="text" id="username" name="username" class="form-control" placeholder="Kullanıcı adı" required autofocus>
        </div>

        <div class="form-group">
            <input type="password" id="password" name="password" class="form-control" placeholder="Parola" required>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş</button>
        <p class="mt-5 mb-3 text-muted text-center">&copy; 2019</p>
  }
</body>
</html>
