@model IEnumerable<BlogProject.Models.Category>
<div class="card mb-4">
    <h5 class="card-header">Kategoriler</h5>
    <div class="card-body">
        <ul class="list-unstyled mb-0">
            @foreach (BlogProject.Models.Category category in Model)
            {
                <li>
                    <a href="~/Category/Index/@category.CategoryId">@category.Name (@category.Article.Count)</a>
                </li>
            }
        </ul>
    </div>
</div>
